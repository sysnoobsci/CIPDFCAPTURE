<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ameraz.android.cipdfcapture.app.ExtendedClasses.GestureImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/upload_image_view"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009dd9"
        android:id="@+id/upload_input_button_layout">

        <EditText
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/upload_name_input"
            android:hint="Name: 40 character max"
            android:gravity="top"
            android:background="#ffffff"
            android:maxLength="40" />

        <ImageButton
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:id="@+id/image_upload_button"
            android:layout_margin="4dp"
            android:background="#00000000"
            android:src="@drawable/ic_action_upload"/>
    </LinearLayout>
</LinearLayout>